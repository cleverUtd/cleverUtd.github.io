<article class="<%= item.layout %>">
  <% if (item.photos && item.photos.length){ %>
    <%- partial('post/gallery') %>
  <% } %>
  <div class="post-content">
    <header>
        <div class="icon"></div>
        <% if (item.top){ %>
          <div id="top">置顶</div>
        <% } %>
        <time datetime="<%= item.date.toDate().toISOString() %>"><a href="<%- config.root %><%- item.path %>"><%= item.date.format(config.date_format) %></a></time>
        <%- partial('post/title') %>
    </header>

    <div class="entry">
      <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
      <% } else { if (item.toc !== false) {%>
        <%- partial('post/toc') %>
      <% } %>
        <%- item.content %>
      <% } %>
    </div>
    <footer>
<!--       <% if (index){ %> -->
        <% if (item.excerpt){ %>
          <div class="alignleft">
            <a href="<%- config.root %><%- item.path %>#more" class="more-link"><%= theme.excerpt_link %></a>
          </div>
        <% } %>
        <% if (item.comments && theme.comment_provider){ %>
        <div class="alignright">
          <a href="<%- config.root %><%- item.path %>#comment" class="comment-link"><%= theme.comment_link %></a>
        </div>
        <% } %>
<!--       <% } else { %> -->
        <%- partial('post/category') %>
        <%- partial('post/tag') %>
        <%- partial('post/counter') %>
        <%- partial('post/share') %>
        <%- partial('post/prev_next') %>
<!--       <% } %> -->
      <div class="clearfix"></div>
      
    </footer>
  </div>
</article>
<%- partial('post/comment') %>
